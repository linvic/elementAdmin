
.content {
    position: absolute;
    padding: 20px;
    left: 220px;
    top: 60px;
    right: 0;
    bottom: 0;
    background: #f1f4f5;
    position: absolute;
    box-sizing: border-box;
    overflow-y: auto;
}

/* 对齐 */
.text-center {
    text-align: center;
}
